<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_codigo"
                android:textColorHint="@color/white"
                android:layout_marginTop="20dp"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:hint="Ingrese el c贸digo"
                android:textColor="@color/white"
                android:background="@drawable/et_bg"
                android:drawableStart="@drawable/ic_plus"
                android:paddingLeft="40dp"
                android:drawablePadding="15dp">

            </EditText>

            <EditText
                android:id="@+id/et_descripcion"
                android:textColorHint="@color/white"
                android:layout_marginTop="30dp"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:hint="Ingrese la descripci贸n"
                android:textColor="@color/white"
                android:background="@drawable/et_bg"
                android:drawableStart="@drawable/ic_description"
                android:paddingLeft="40dp"
                android:drawablePadding="15dp">

            </EditText>

            <EditText
                android:id="@+id/et_precio"
                android:textColorHint="@color/white"
                android:layout_marginTop="30dp"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:hint="Ingrese el precio"
                android:textColor="@color/white"
                android:background="@drawable/et_bg"
                android:drawableStart="@drawable/ic_money"
                android:paddingLeft="40dp"
                android:drawablePadding="15dp">

            </EditText>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <!-- <TextView
                     android:id="@+id/tvMensaje"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Mensaje"
                     android:textSize="20dp"
                     android:textColor="@color/white"
                     android:layout_marginTop="20dp"
                     android:textAlignment="center">

                 </TextView> -->

                <Button
                    android:id="@+id/btn_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_save_black_24dp"
                    >
                </Button>

                <Button
                    android:id="@+id/btn_consultar1"
                    android:textColor="@color/white"
                    android:text="Consultar c贸digo"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_search"
                    >
                </Button>

                <Button
                    android:id="@+id/btn_consultar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Consultar descripci贸n"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_search"
                    >
                </Button>

                <Button
                    android:id="@+id/btn_eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Borrar"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_delete"
                    >
                </Button>

                <Button
                    android:id="@+id/btn_actualizar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Editar"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:drawableTop="@drawable/ic_edit"
                    >
                </Button>
                <Button
                    android:id="@+id/btnNuevo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Limpiar"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:drawableTop="@drawable/ic_clear"
                    >
                </Button>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>